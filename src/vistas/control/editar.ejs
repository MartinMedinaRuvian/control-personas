<%- include('../parcial/_cabecera') %>

<div class="container mt-5">
   <div class="row">
       <div class="col-md-4 mx-auto">
       <div class="card"> 
           <div class="card-body text-center">
               <h4>Modificar Control</h4>
               <form action="/control/editar/<%= dato[0].id %>/<%= idpersona %>/<%= persona %>" method="POST">
                <div class="form-group">
           
                    <div class="form-group">
                        <input type="text" class="form-control" name="origen" value="<%= dato[0].origen %>">
                     </div>
    
                     <div class="form-group">
                      <input type="text" class="form-control" name="destino" value="<%= dato[0].destino %>">
                    </div>
     
                      <div class="form-group">
                          <textarea name="observacion" cols="30" rows="5"
                            class="form-control" autofocus><%= dato[0].observacion %></textarea>
                      </div>
                      
                        <div class="form-group">                       
                            <input type="text" hidden class="form-control" name="fecha" value="<%= dato[0].fecha %>">
                        </div>

                        <div class="form-group">                  
                            <input type="text" hidden class="form-control" name="hora" value="<%= horaActual %>">
                        </div>

              <div class="form-group">
              <button type="submit" class="btn btn-success form-control">Guardar</button>
              <a href="/personas" class="btn btn-secondary form-control mt-2">Cancelar</a>
            </div>
               </form>
           </div>
       </div>
       </div>
   </div>
</div>

