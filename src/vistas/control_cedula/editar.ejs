<%- include('../parcial/_cabecera') %>

<div class="container mt-5">
   <div class="row">
       <div class="col-md-4 mx-auto">
       <div class="card"> 
           <div class="card-body text-center">
               <h4>Modificar Digitos</h4>
               <form action="/control_cedula/editar/<%= dato[0].id %>" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="digitos" value="<%= dato[0].digitos %>" autofocus>
                    </div>
              <div class="form-group">
              <button type="submit" class="btn btn-success form-control">Guardar</button>
              <a href="/usuarios/perfil" class="btn btn-secondary form-control mt-2">Cancelar</a>
            </div>
               </form>
           </div>
       </div>
       </div>
   </div>
</div>

